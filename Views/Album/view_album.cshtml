@model List<Spotify_Album.Models.Album>
@{
    ViewData["Title"] = "view_album";
}

<div class="container">
    <div class="row">
        <div class="col-md">
            <div class="card" id="descripcion" style="background-color: @Model[0].color;">
                <div class="card-body">
                    <div>
                        <img src="@Model[0].imgPrincipal" alt="@Model[0].nombre">
                    </div>
                    <span id="titulo">
                        <h4><small>Album</small></h4>
                        <h2>@Model[0].nombre</h2>
                        <h4><small>@Model[0].artista</small></h4>
                        <h6><small>@Model[0].lanzamiento</small></h6>
                    </span>
                    <div id="contenido">
                        <a href="@Model[0].Spotify" type="button" id="spotify"><img src="https://i.imgur.com/aKwCuLb.png" alt=""></a>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="musica">
    <table class="table" id="canciones">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Titulo</th>
            </tr>
        </thead>
        <tbody>
            @for(int i=0; i<@Model[0].canciones.Count(); i++){
                <tr>
                    <th scope="row">@i</th>
                    <td>@Model[0].canciones[i]</td>
                </tr> 
            }
        </tbody>
    </table>
</div>
<div class="clear_fix"></div>
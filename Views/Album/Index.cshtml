@model List<Spotify_Album.Models.Album>
@{
    ViewData["Title"] = "Index";
}

<div class="container" id="buscador">
    <div class="row">
        <div class="col-md">
            <form method="POST" action="/Album/Search" class="d-flex" role="search">
                <input name="album" id="textBox" class="form-control me-2" type="search" placeholder="Escribe un album" aria-label="Search">
                <button class="btn btn-outline-success" id="button_buscar" type="submit">Buscar album</button>
            </form>
        </div>
    </div>
</div>

@if (Model.Count==0)
{
    <div class="card" id="vacio">
        <div class="card-body">
            <h3>No se encontraron resultados</h3>
        </div>
    </div>
}
@foreach (var item in Model)
{
    <div class="card" id="box_album" >
        <div class="card-body">
            <div class="row">
                <div class="col-md">
                    <img src="@item.imgPrincipal" alt="@item.nombre">
                    <span>
                        <h3>@item.nombre</h3>
                        <h5><small>@item.artista</small></h5>
                    </span>
                    <a href="/Album/view_album/@item.id" type="button" id="play"><img src="https://i.imgur.com/aKwCuLb.png" alt=""></a>
                </div>
            </div>
        </div>
    </div>
}
<div class="clear_fix"></div>